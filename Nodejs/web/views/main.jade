    script(type='text/javascript').
        if(#{flag}== 1 ) {
            swal({
                title: "환영합니다",
                type: "success",
                showCancelButton: true,
                showConfirmButton: false
            });
        }
        var sentimentResult = "분석실패";
        var socket = null;
        $(document).ready(function () {
            socket = io.connect();
            socket.emit('load_note', JSON.stringify({c_no:Number($('#c_no').val())}));
            socket.on('load_note', function(data){
                data = JSON.parse(data);
                if(data.length > 0){
                    for(var i = 0; i < data.length; i++){
                        $('#board').append('<div class="col-md-4"><div class="panel panel-default"><div class="panel-heading"><h4><i class="fa fa-fw fa-pencil-square-o"></i>' + data[i].c_title +
                            '<div class="close"><i class="fa fa-fw fa-remove" name="' + data[i]._id + '"></i></div></h4></div><div class="panel-body"><p>' + data[i].c_content +
                            '</p><a href="javascript:analysis(\''+data[i]._id+'\')" class="btn btn-default">분석</a></div></div></div>');
                    }
                    $('i').click(function(){
                        
                        var result = confirm('정말로 삭제하시겠습니까?');
                        if(result){
                            socket.emit('delete_note', JSON.stringify({_id:$(this).attr('name')}));
                            location.href="/main";
                        }

                    });
                    $('#btn').click(function () {
                        socket.emit('sentiment', JSON.stringify({_id: $(this).attr('name')}));
                    });
                }else{
                    $('#board').append('<div class="col-lg-12"><ol class= "breadcrumb" >게시글이 없습니다.</ol></div >');
                }
            });
            socket.on('sentiment_result',function(data){
                var sentimentArray = ["애매모호함","편안함","지루함","행복함","화남","무서움","혐오함","슬픔"];
                sentimentResult = sentimentArray[data.result];
            });


        });
        function analysis(id){
            swal({
                    title: "분석하시겠습니까?",
                    text: "9 ~ 10초 정도 소요됩니다",
                    type: "info",
                    showCancelButton: true,
                    closeOnConfirm: false,
                    showLoaderOnConfirm: true,
                },
                function () {
                    setTimeout(function () {
                        swal(sentimentResult);
                    }, 10000);
                });
            socket.emit('sentiment', JSON.stringify({_id:id}));
        }